/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer components {
  .invoice-table {
    @apply mb-3 grid w-full grid-cols-invoiceTable gap-4 px-6;
  }
}

@layer utilities {
  .center {
    @apply flex items-center justify-center;
  }
}
